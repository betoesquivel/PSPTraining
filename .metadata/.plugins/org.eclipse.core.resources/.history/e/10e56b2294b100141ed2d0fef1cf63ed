package mx.itesm.a01139626.p1.src;

import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class Parser implements ErrorMessages{
	private Pattern pInfoLine; 
	private Pattern pWhiteLine; 
	private Matcher sMatcher; 
	
	public Parser(){
		// finds non-space characters
		this.pInfoLine = Pattern.compile("\\S");
		// matches strings with only spaces
		this.pWhiteLine = Pattern.compile("\\s+"); 
	}
	public boolean isWhiteLine(String s){
		sMatcher = pWhiteLine.matcher(s);
		return sMatcher.matches();
	}
	public boolean isInfoLine(String s){
		sMatcher = pInfoLine.matcher(s);
		return sMatcher.find(); 
	}
}
